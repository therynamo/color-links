// tsconfig.json
// assuming your ts sources are in ./src/
{
  "exclude": ["./jest", "jest.config.js", "./**/__mocks__/*"],
  "compilerOptions": {
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["DOM", "ES2015", "ES2017", "ES6"],
    "target": "ES5",
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "~*": ["./*"]
    }
  },
  "include": ["src/**/*"]
}
